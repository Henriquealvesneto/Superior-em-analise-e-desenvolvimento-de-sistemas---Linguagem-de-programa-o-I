class PrimeiraClasse:
    def imprimir_mensagem(self, nome): # Criando um método
        print(f"Olá {nome}, seja bem vindo!")
        
objeto1 = PrimeiraClasse() # Instanciando um objeto do tipo PrimeiraClasse
objeto1.imprimir_mensagem('Henrique') #Invocando o método

class Televisao:
    def __init__(self):
        self.volume = 10
    def aumentar_volume(self):
        self.volume += 1
    def diminuir_volume(self):
        self.volume -= 1

tv = Televisao()
print(f"\nVolume ao ligar a tv = ", tv.volume)
tv.aumentar_volume()
tv.aumentar_volume()
tv.diminuir_volume()
print(f"\nVolume atual = ", tv.volume)

